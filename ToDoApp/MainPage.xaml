<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.MainPage"
             xmlns:cx="clr-namespace:ToDoApp.Controls.Views"
             >

    <ScrollView>
        <VerticalStackLayout >
            <DatePicker Date="{Binding propSelectedDate, Mode=OneWayToSource}"
                        Format="yyyy/MM/dd"
                        MinimumDate="12/31/1989"
                        MaximumDate="12/31/2050"
                        FontSize="Large"/>
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

