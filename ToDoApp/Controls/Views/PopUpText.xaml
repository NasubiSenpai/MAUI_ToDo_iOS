<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Controls.Views.PopUpText"
             >
    <Label x:Name="PopUpTxt"
          Text="{Binding propUpperText, Mode=TwoWay}"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          HeightRequest="{Binding propTextHeight, Mode=TwoWay}"
          WidthRequest="{Binding propTextWidth, Mode=TwoWay}"
          FontSize="{Binding propTextFontSize, Mode=TwoWay}">
    </Label>
</ContentView>

